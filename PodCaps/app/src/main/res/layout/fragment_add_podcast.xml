<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".ui.fragment.AddPodcastFragment">

    <ImageView
        android:id="@+id/podcast_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/background_rounded_corners_dark_grey"
        android:contentDescription="@string/podcast_image_content_description"
        android:scaleType="center"
        android:tint="@color/app_icon_light_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_headset" />

    <EditText
        android:id="@+id/podcast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/podcast_name_hint"
        android:hint="@string/podcast_name_hint"
        android:textColor="@android:color/white"
        android:textColorHint="@color/fount_dark_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/podcast_image" />

    <EditText
        android:id="@+id/podcast_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/podcast_description_hint"
        android:hint="@string/podcast_description_hint"
        android:textColor="@android:color/white"
        android:textColorHint="@color/fount_dark_grey"
        app:backgroundTint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/podcast_name" />


    <EditText
        android:id="@+id/podcast_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/podcast_file_hint"
        android:drawableStart="@drawable/ic_folder"
        android:drawablePadding="5dp"
        android:drawableTint="@color/app_icon_grey"
        android:hint="@string/podcast_file_hint"
        android:textColor="@android:color/white"
        android:textColorHint="@color/fount_dark_grey"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/podcast_description" />


</android.support.constraint.ConstraintLayout>